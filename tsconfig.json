{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "lib": [
        "es2015"
    ],
    "outDir": "./lib",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
        "./typings",
        "node_modules/@types"
    ],
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.cts",
    "./src/**/*.mts"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ]
}
